<Window x:Class="BattleCruiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleCruiser"
        mc:Ignorable="d"
        Title="Battle Cruiser" Height="700" Width="1200">
    <StackPanel
        x:Name="stack">
        <Menu>
            <MenuItem
                Header="_File">
                <MenuItem
                    Header="_New"
                    Click="NewGame"/>
                <MenuItem
                    Header="_Save"
                    Click="SaveGame"/>
                <MenuItem
                    Header="Save_As"
                    Click="SaveGameAs"/>
                <MenuItem
                    Header="_Open"
                    Click="OpenGame"/>
            </MenuItem>
            <MenuItem
                    Header="_ToggleCheatMode"
                    Click="ToggleCheat"/>
        </Menu>
    </StackPanel>
</Window>
