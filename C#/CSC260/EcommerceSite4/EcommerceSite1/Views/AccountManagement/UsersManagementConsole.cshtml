@using EcommerceSite1.Models
@model UserRoleChangeModel

<div>
    @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post, new { @class = "Form", @id = "Register", role = "form" })) {
        @Html.AntiForgeryToken()
        <div class="FormListing">
            <div>
                @Html.LabelFor(m => m.UserName, new { @class = "Label" }):
            </div>
            <div>
                @Html.TextBoxFor(m => m.UserName, new { @class = "Input" })
            </div>
        </div>
        <div class="FormListing">
            <div>
                @Html.LabelFor(m => m.NewRole, new { @class = "Label" }):
            </div>
            <div>
                @Html.TextBoxFor(m => m.NewRole, new { @class = "Input" })
            </div>
        </div>
        <div class="button">
            <input type="submit" class="btn btn-default" value="Add Role" />
        </div>
    }
</div>